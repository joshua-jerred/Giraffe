{
  // CMake
  "cmake.sourceDirectory": "${workspaceFolder}",

  // Formating
  "clang-format.style": "file",
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },

  // Doxygen
  
  "doxdocgen.file.fileOrder": [
    "custom",
  ],
  "doxdocgen.file.customTag": [
    "=*========GIRAFFE========*=",
    "A Unified Flight Command and Control System",
    "https://github.com/joshua-jerred/Giraffe",
    "https://giraffe.joshuajer.red/",
    "=*=======================*=",
    "",
    "@file{indent:8}{file}",
    "@brief{indent:8}",
    "",
    "=*=======================*=",
    "@author{indent:12}{author} ({email})", // Gets replaced by user's settings
    "@date{indent:12}{date}",
    "@copyright{indent:12}{year} (license to be defined)",
  ],
  "doxdocgen.generic.customTags":[
    "@full_log_coverage",
  ],

  // DocWriter
  "docwriter.hotkey.windows": "Alt + .",
  "docwriter.progress.trackClasses": true,
  "docwriter.progress.trackTypes": true,

  // Spell Checker
  "cSpell.words": [
    "bstrst"
  ],
}