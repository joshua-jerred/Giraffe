{
  // CMake
  "cmake.sourceDirectory": "${workspaceFolder}",
  "cmake.useCMakePresets": "always",

  // Formating (C++, Clang-Format)
  "clang-format.style": "file",
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true
  },

  // Formating (javascript, prettier)
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Doxygen
  "doxdocgen.file.fileOrder": [
    "custom",
  ],
  "doxdocgen.file.customTag": [
    "=*========GIRAFFE========*=",
    "A Unified Flight Command and Control System",
    "https://github.com/joshua-jerred/Giraffe",
    "https://giraffe.joshuajer.red/",
    "=*=======================*=",
    "",
    "@file{indent:8}{file}",
    "@brief{indent:8}",
    "",
    "=*=======================*=",
    "@author{indent:12}{author} ({email})", // Gets replaced by user's settings
    "@date{indent:12}{date}",
    "@copyright{indent:12}{year} (license to be defined)",
  ],

  // DocWriter
  "docwriter.hotkey.windows": "Alt + .",
  "docwriter.progress.trackClasses": true,
  "docwriter.progress.trackTypes": true,

  // Spell Checker
  "cSpell.words": [
    "bstrst",
    "bugprone",
    "dataframe",
    "datasheet",
    "endverbatim",
    "fstream",
    "HHMMSS",
    "nlohmann",
    "puml",
    "Reassembler",
    "rssi",
    "SAMM",
    "Sats",
    "smbus",
    "stdexcept",
    "stoi",
    "Struct",
    "telem"
  ],
  "files.associations": {
    "array": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "*.tcc": "cpp",
    "cctype": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "deque": "cpp",
    "string": "cpp",
    "unordered_map": "cpp",
    "vector": "cpp",
    "exception": "cpp",
    "algorithm": "cpp",
    "functional": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "optional": "cpp",
    "random": "cpp",
    "string_view": "cpp",
    "system_error": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "initializer_list": "cpp",
    "iosfwd": "cpp",
    "limits": "cpp",
    "new": "cpp",
    "numbers": "cpp",
    "ostream": "cpp",
    "ranges": "cpp",
    "span": "cpp",
    "stdexcept": "cpp",
    "streambuf": "cpp",
    "typeinfo": "cpp"
  }
}
