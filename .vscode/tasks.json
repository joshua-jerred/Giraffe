{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run clang-tidy",
      "type": "shell",
      "command": "${workspaceFolder}/toolchain/clang_tidy.sh",
      "detail": "Run clang-tidy on the project",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Doxygen",
      "type": "shell",
      "command": "doxygen ${workspaceFolder}/project/doxygen/Doxyfile",
      "detail": "Generate Doxygen documentation for the project",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Pre-commit",
      "type": "shell",
      "command": "pre-commit run",
      "detail": "Run pre-commit on the project",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
