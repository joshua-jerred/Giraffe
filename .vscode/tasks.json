{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run codechecker",
      "type": "shell",
      "command": "${workspaceFolder}/project/codechecker.sh",
      "detail": "Run codechecker on the project",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "generate source files",
      "type": "shell",
      "command": "${workspaceFolder}/project/generate_source_files.sh",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Doxygen",
      "type": "shell",
      "command": "doxygen ${workspaceFolder}/project/doxygen/Doxyfile",
      "detail": "Generate Doxygen documentation for the project",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Pre-commit",
      "type": "shell",
      "command": "pre-commit run",
      "detail": "Run pre-commit on the project",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-l", "-c"]
        }
      }
    }
  ]
}
