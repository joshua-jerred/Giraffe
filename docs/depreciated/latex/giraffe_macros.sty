% Requirements with counter
\newcounter{req_counter}
\setcounter{req_counter}{1}
\newcommand{\showreqcounterandinc}{
  % two leading zeros
  \ifnum\value{req_counter}<10 00\else
    \ifnum\value{req_counter}<100 0\fi
  \fi
  \arabic{req_counter}
  \stepcounter{req_counter}
}
\newcommand{\req}[1]{
\noindent\textbf{REQ\showreqcounterandinc} #1 \par
}

